<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/feature_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/feature_image"
        android:scaleType="centerInside"
        android:src="@drawable/image_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feature"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/feature_icon"
        app:layout_constraintStart_toStartOf="@+id/feature_icon"
        app:layout_constraintTop_toBottomOf="@+id/feature_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>